<% if (success && success.trim().length > 0) { %>
    <div class="alert alert-primary alert-dismissible text-center fade col-6 offset-3 mt-3 show" role="alert">
        <strong>Kanishk : </strong> <%= success.trim() %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>

<% if (error && error.trim().length > 0) { %>
    <div class="alert alert-danger alert-dismissible  text-center  col-6 offset-3 mt-3 show" role="alert">
        <strong>Kanishk : </strong> <%= error.trim() %>
        <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
    </div>
<% } %>
